{
  "allow_overriding": true,
  "parallel_loading": true,
  "suppress_warnings": false,

  "honor_ansi_color": true,
  "logo_style": "retro",
  "entries_color": "35",
  "hide_undetected": false,
  "entries_icon": true,
  "entries": [
    { "type": "User" },
    { "type": "Hostname" },
    { "type": "Model" },
    { "type": "Distro" },
    { "type": "Kernel", "check_version": false },
    { "type": "Uptime" },
    { "type": "LoadAverage", "decimal_places": 2, "warning_threshold": 1.0, "danger_threshold": 2.0 },
    { "type": "Processes" },
    { "type": "Shell" },
    { "type": "Terminal", "use_unicode": true },
    { "type": "Packages", "combine_total": false, "one_line": true, "show_zeros": false },
    { "type": "CPU", "one_line": false, "show_cores": true },
    { "type": "GPU", "one_line": false, "max_count": 2 },
    { "type": "RAM", "warning_use_percent": 33.3, "danger_use_percent": 66.7 },
    { "type": "Disk", "show_filesystems": ["local"], "combine_total": true, "disk_labels": null, "hide_entry_name": null, "warning_use_percent": 50, "danger_use_percent": 75 },

    { "type": "Custom", "name": "- ", "icon": "", "shell": false, "command": ["echo", "-"] },

    { "type": "Custom", "name": "Time", "icon": "\uf017", "shell": true, "command": "date '+%Y-%m-%d %H:%M'" },
    { "type": "Custom", "name": "Datadog Agent", "icon": "\uf1b0", "shell": true, "command": "datadog-agent status >/dev/null 2>&1 && echo running || echo not running" },
    { "type": "Custom", "name": "Weather", "icon": "\u2601", "shell": true, "command": "curl -s wttr.in?format=1" },
        { "type": "Custom", "name": "Battery", "icon": "\uf240", "shell": true, "command": "pmset -g batt | grep -Eo '[0-9]+%' | head -1" }

  ],
  "default_strings": {
    "latest": "latest",
    "available": "available",
    "no_address": "No Address",
    "not_detected": "Not detected",
    "virtual_environment": "Virtual Environment"
  }
}